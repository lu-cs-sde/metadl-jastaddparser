aspect LineColumn {
	public int ASTNode.start;
	public int ASTNode.end;
	
	public static int ASTNode.getLine(int position) {
		return position >>> 12;
	}
	
	public static int ASTNode.getColumn(int position) {
		return position & (1 << 12) - 1;
	}
	
	public int ASTNode.getStart() {
		return start;
	}
	
	public int ASTNode.getEnd() {
		return end;
	}
}